<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MapActivity">

    <LinearLayout
        android:id="@+id/activity_login_ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/activity_login_iv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_login_iv_login"
                android:layout_marginTop="17dp"
                android:textColor="@color/login_blue"
                android:text="Protect Angel"
                android:textSize="26sp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_login_rl_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:id="@+id/activity_login_rl_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/rounded_edittext">
                <EditText
                    android:id="@+id/activity_login_et_account"
                    android:background="@null"
                    android:layout_width="328dp"
                    android:layout_height="69dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColorHint="@color/bg_get_verification_code"
                    android:hint="请输入账号"
                    android:maxLength="20"
                    android:maxLines="1" />
                <View
                    android:id="@+id/activity_login_view_underline_account"
                    android:layout_width="328dp"
                    android:layout_height="1dp"
                    android:background="@color/login_blue"
                    android:layout_below="@+id/activity_login_et_account"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_login_rl_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_login_rl_account"
                android:background="@drawable/rounded_edittext">
                <EditText
                    android:id="@+id/activity_login_et_password"
                    android:layout_width="328dp"
                    android:layout_height="69dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textSize="15sp"
                    android:textColorHint="@color/bg_get_verification_code"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:hint="请输入密码"
                    android:inputType="number" />
                <View
                    android:id="@+id/activity_login_view_underline_password"
                    android:layout_width="328dp"
                    android:layout_height="1dp"
                    android:background="@color/login_underline"
                    android:layout_below="@+id/activity_login_et_password"/>
                <!--<TextView-->
                <!--android:id="@+id/activity_login_tv_verificationCode"-->
                <!--android:layout_width="99dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:textSize="16sp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="@string/activity_login_verifiedCode"-->
                <!--android:gravity="center"-->
                <!--android:layout_toRightOf="@+id/activity_login_et_checkNum"-->
                <!--android:background="@drawable/activity_login_btn_send_gray"-->
                <!--android:textColor="@color/text_get_verification_code"/>-->
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/activity_login_btn_login"
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/activity_login_btn_login"
            android:gravity="center"
            android:text="登录"
            android:textSize="19sp"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/activity_login_tv_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/login_blue"
                android:textSize="15sp"
                android:text="注意事项"
                android:autoLink="all"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>