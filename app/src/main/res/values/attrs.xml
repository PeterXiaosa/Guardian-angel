<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomNumberPicker">
        <attr name="textColorSelected" format="color"/>
        <attr name="textColorGrey" format="color"/>
        <attr name="textColorGreyShader" format="color"/>
        <attr name="bgColorSelected" format="color"/>
        <attr name="textSize" format="dimension"/>
        <!-- 数字最小值最大值-->
        <attr name="MaxValue" format="integer"/>
        <attr name="MinValue" format="integer"/>
        <!-- 一页的长度-->
        <attr name="pageSize" format="integer"/>
        <!-- 数字左边距-->
        <attr name="numberPaddingStart" format="dimension"/>
        <!-- 选中数字的描述文字（数字右边）-->
        <attr name="selectedNumberTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomRatingBar">
        <attr name="numStars" format="integer" /><!--总的星星数-->
        <attr name="rating" format="float" /><!--当前已选中的星星个数-->
        <attr name="ratingViewClass" format="string" />
    </declare-styleable>

    <declare-styleable name="CouponView">
        <attr name="radius" format="dimension"/>
        <attr name="spacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="my_toolbar">
        <attr name="title" format="string"/>
        <attr name="left_icon1" format="string"/>
        <attr name="left_icon2" format="string"/>
        <attr name="left_icon3" format="string"/>
        <attr name="right_icon1" format="string"/>
        <attr name="right_icon2" format="string"/>
        <attr name="right_icon3" format="string"/>
    </declare-styleable>

    <declare-styleable name="function_icon">
        <attr name="icon_content" format="string"/>
        <attr name="icon_value" format="string"/>
    </declare-styleable>
</resources>